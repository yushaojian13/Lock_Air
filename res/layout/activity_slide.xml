<?xml version="1.0" encoding="utf-8"?>
<com.xmht.lock.demo.activity.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/widget_preview1" />

    <com.xmht.lock.demo.activity.SlideListView
        android:id="@+id/content"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.xmht.lock.demo.activity.SlideListView>

</com.xmht.lock.demo.activity.SlideLayout>